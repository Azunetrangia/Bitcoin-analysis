# Bitcoin Market Intelligence - Environment Variables Template
# Copy this file to .env and fill in your credentials

# ===== Cloudflare R2 Storage =====
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_BUCKET_NAME=bitcoin-market-data
R2_PUBLIC_URL=https://pub-xxxx.r2.dev  # If using public bucket

# ===== Supabase Database =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here  # For admin operations

# ===== Data Sources =====
BINANCE_DATA_BASE_URL=https://data.binance.vision

# ===== Application Settings =====
LOG_LEVEL=INFO
CACHE_TTL=3600  # Cache time-to-live in seconds
MAX_QUERY_ROWS=100000  # Max rows to fetch in single query

# ===== Development Settings =====
ENVIRONMENT=development  # development, staging, production
DEBUG=True
